<%= form_for(@playlist) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

    <% @songs.each do |song| -%>
    <div>
      <% if @playlist.songs.pluck(:title).include?(song.title) %>
        <%= check_box_tag(:song_ids, song.id, false, :checked=>"checked", :name => 'playlist[song_ids][]', id: "song-#{song.id}") %>
        <%= song.title %>
      <% else%>
        <%= check_box_tag(:song_ids, song.id, false, :name => 'playlist[song_ids][]', id: "song-#{song.id}") %>
        <%= song.title %>
      <%end%>
      </div>
    <% end %>

  <%= f.submit  @playlist.new_record? ? "Create Playlist" : "Update Playlist" %>
<% end %>